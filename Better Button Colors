                <input type="radio" ng-model="add.elements[p.name]" ng-value="false">False<br/>
              </form>
              <span data-ng-if='p.type==="Number"'>
                <h4>{{add.elements[p.name] || 0 }}
                  <button ng-click="add.elements[p.name] = add.elements[p.name] + 1" class="btn btn-xs btn-success">+</button>
                  <button ng-if='add.elements[p.name]>0' ng-click="add.elements[p.name] = add.elements[p.name] - 1" class="btn btn-xs btn-danger">-</button>
                </h4>
              </span>
          </td>
          <td data-ng-repeat='r in curGame.calc'>{{getValue(add.elements,r.elements)}}</td>
